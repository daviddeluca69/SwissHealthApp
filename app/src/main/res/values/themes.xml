<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SwissHealthApp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:actionBarSize">56sp</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    
    <style name="ActionBarStyle" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTitleStyle" parent="android:TextAppearance.Material.Title">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="Theme.SwissHealthApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.SwissHealthApp</item>
    </style>
</resources>